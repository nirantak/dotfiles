{
    "workbench.iconTheme": "vscode-icons",
    "window.zoomLevel": 0,
    "editor.wordWrap": "on",
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "'Liberation Mono for Powerline', 'Ubuntu Mono', monospace",
    "terminal.integrated.fontSize": 14,

    // Controls whether the prompt will show
    "sublimeTextKeymap.promptV3Features": true,
    // Changes the multi cursor mouse binding
    "editor.multiCursorModifier": "ctrlCmd",
    // Specifies the location of snippets in the suggestion widget
    "editor.snippetSuggestions": "top",

    // Editor Settings
    "editor.formatOnPaste": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
    },

    // Python Settings
    "python.pythonPath": "python3",
    "python.linting.maxNumberOfProblems": 50,
    "python.formatting.provider": "autopep8",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.rulers": [
            79,
            120
        ]
    },

    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".git/**",
        "**/__pycache__/**",
        "**/node_modules/**"
    ],

    "[html]": {
        "editor.formatOnSave": false
    },

    // Plugin Settings
    "markdownlint.config": {
        "default": true,
        "MD001": false,
        "MD007": {
            "indent": 4
        },
        "no-hard-tabs": false
    },
    "emmet.includeLanguages": {
        "edge": "html",
        "jsx": "html",
        "blade": "html"
    },
    "emmet.excludeLanguages": [],
    "prettier.tabWidth": 4,
    "prettier.useTabs": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "sync.gist": "251126d55d60f6da6981f15f6ca1ef44",
    "sync.lastUpload": "2018-04-04T16:59:55.520Z",
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.lastDownload": "",
    "sync.forceDownload": false,
    "sync.host": "",
    "sync.pathPrefix": "",
    "sync.quietSync": false,
    "sync.askGistName": false,
    "gitlens.keymap": "alternate",

    "code-runner.clearPreviousOutput": true,
    "code-runner.respectShebang": true,
    "code-runner.saveFileBeforeRun": true,

    "files.associations": {
        "*.lock": "json",
        "Pipfile": "toml",
        ".envrc": "shellscript"
    },
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
}
