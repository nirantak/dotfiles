{
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.highlightModifiedTabs": true,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'Liberation Mono for Powerline', 'Ubuntu Mono', monospace",
  "terminal.integrated.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "boundary",
  "editor.tabSize": 4,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "editor.parameterHints.enabled": false,
  "editor.suggestSelection": "first",
  "breadcrumbs.enabled": true,
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "markdown",
  "files.associations": {
    "*.lock": "json",
    "Pipfile": "toml",
    "*.env": "shellscript",
    "*.dat": "CSV (pipe)",
    ".slugignore": "ignore",
    ".flake8": "ini",
    "Dockerfile*": "dockerfile"
  },
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Language Settings
  "python.pythonPath": "python",
  "python.linting.maxNumberOfProblems": 50,
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    ".git/**",
    "**/__pycache__/**",
    "**/node_modules/**"
  ],
  "python.jediEnabled": false,
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.rulers": [80, 100],
    "editor.tabSize": 4
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // Plugin Settings
  "prolog.format.insertSpaces": false,
  "prolog.linter.run": "onSave",
  "emmet.excludeLanguages": [],
  "emmet.syntaxProfiles": {
    "javascript": "javascriptreact"
  },
  "indentRainbow.colors": [
    "rgba(32,64,32,0.3)",
    "rgba(64,32,64,0.3)",
    "rgba(16,48,48,0.3)",
    "rgba(64,64,16,0.3)"
  ],
  "cSpell.userWords": ["nirantak", "raghav"]
}
