[user]
	name = Full Name
	email = user@email.com

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input

[color]
	diff = auto
	status = auto
	ui = auto

[color "diff"]
	meta = yellow bold
	frag = magenta bold	# line info
	old = red		# deletions
	new = green		# additions

[alias]
	pm= "!git push -u origin master"
	c = commit -m
	a = add .
