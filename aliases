# Unix
alias ll="ls -al"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

alias u='sudo apt update && sudo apt upgrade'
alias b='browser-sync start --server --directory --files "**/*"'
alias rm="rm -i"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
